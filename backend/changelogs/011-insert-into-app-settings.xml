<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
      http://www.liquibase.org/xml/ns/dbchangelog
      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.33.xsd">


    <changeSet id="011-insert-maintenance-setting" author="lalu">

        <!-- Comment first -->
        <comment>Insert maintenance_mode setting</comment>


        <!-- Preconditions must come BEFORE insert -->
        <preConditions onFail="MARK_RAN">

            <not>
                <sqlCheck expectedResult="0">
                    SELECT COUNT(*)
                    FROM app_settings
                    WHERE setting_key = 'maintenance_mode'
                </sqlCheck>
            </not>

        </preConditions>


        <!-- Insert -->
        <insert tableName="app_settings">

            <column name="setting_key" value="maintenance_mode"/>

            <column name="setting_value" value="false"/>

        </insert>


        <!-- Rollback -->
        <rollback>

            <delete tableName="app_settings">
                <where>setting_key = 'maintenance_mode'</where>
            </delete>

        </rollback>


    </changeSet>

</databaseChangeLog>