<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                                       http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

  <changeSet id="007-create-audit-log" author="dev-team">
    <description>Create audit log table for tracking migrations and rollbacks</description>
    
    <createTable tableName="audit_log">
      <column name="id" type="INT" autoIncrement="true">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="action_type" type="VARCHAR(50)">
        <constraints nullable="false"/>
      </column>
      <column name="table_name" type="VARCHAR(100)">
        <constraints nullable="true"/>
      </column>
      <column name="performed_by" type="VARCHAR(100)">
        <constraints nullable="true"/>
      </column>
      <column name="created_at" type="DATETIME" defaultValueComputed="CURRENT_TIMESTAMP">
        <constraints nullable="false"/>
      </column>
      <column name="description" type="TEXT">
        <constraints nullable="true"/>
      </column>
    </createTable>

    <createIndex tableName="audit_log" indexName="idx_audit_created_at">
      <column name="created_at"/>
    </createIndex>

    <rollback>
      <dropIndex tableName="audit_log" indexName="idx_audit_created_at"/>
      <dropTable tableName="audit_log"/>
    </rollback>
  </changeSet>

</databaseChangeLog>
